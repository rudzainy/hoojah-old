<div class="free_top">
  <div class="col-md-6 col-md-offset-3">
    <div class="row">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h2>Change your password</h2>
        </div>
        <div class="panel-body">
          <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
            <%= f.error_notification %>

            <%= f.input :reset_password_token, as: :hidden %>
            <%= f.full_error :reset_password_token %>

            <div class="form-group">
              <%= f.input :password, label: "New password", required: true, autofocus: true, hint: ("#{@minimum_password_length} characters minimum", input_html: { class: 'form-control' } if @minimum_password_length) %>
            </div>
            <div class="form-group">
              <%= f.input :password_confirmation, label: "Confirm your new password", required: true, input_html: { class: 'form-control' } %>
            </div>

            <div class="form-actions btn-group">
              <%= f.button :submit, "Change my password" %><%= link_to "Back", :back, class: "btn btn-default" %>
            </div>
          <% end %>
          </div>
        <div class="panel-footer">
          <p><%= render "devise/shared/links" %></p>
        </div>
      </div>
    </div>
  </div>
</div>