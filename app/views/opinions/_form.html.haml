= simple_form_for @opinion, html: { multipart: true } do |f|
	- if @opinion.errors.any?
		#errors
		%h2
		= pluralize(@opinion.errors.count, "error")
		prevented this post from saving
		%ul
			-@opinion.errors.full_messages.ech do |mgs|
				%li= mgs

	.form-group
		= f.input :image, input_html: { class: 'form-control' }
		= f.input :title, input_html: { class: 'form-control' }
	.form-group
		.row
			.col-md-6
				= f.input :option1, input_html: { class: 'form-control' }
			.col-md-6
				= f.input :option2, input_html: { class: 'form-control' }
	.btn-group
		= f.button :submit, 'Post', class: "btn btn-default"
		= link_to "Back", root_path, class: "btn btn-default"